<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>APXT_BPM__Record_Id_Length</fullName>
    <active>true</active>
    <errorConditionFormula>AND( APXT_BPM__Record_Id__c != "" ,

LEN( APXT_BPM__Record_Id__c ) > 18)</errorConditionFormula>
    <errorDisplayField>APXT_BPM__Record_Id__c</errorDisplayField>
    <errorMessage>The Record Id must be a 15- or 18-character Salesforce ID</errorMessage>
</ValidationRule>

<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>APTS_Product_Type</fullName>
        <description>This field update is to populate product type text field on line item depending on required entry condition.</description>
        <field>APTS_Product_Type__c</field>
        <formula>if(TEXT(Apttus_Config2__OptionId__r.Apttus_Config2__ProductType__c) != null,
TEXT(Apttus_Config2__OptionId__r.Apttus_Config2__ProductType__c),TEXT(Apttus_Config2__ProductId__r.Apttus_Config2__ProductType__c))</formula>
        <name>APTS Product Type</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>SetProductSubtype</fullName>
        <description>This field update is to populate product subtype text field on line item depending on required entry condition.</description>
        <field>Product_Subtype__c</field>
        <formula>TEXT(Apttus_Config2__OptionId__r.ProductSubtype__c)</formula>
        <name>SetProductSubtype</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Update_Is_Optional_on_Line_Item</fullName>
        <description>its Updating is optional field on line item based on Product object field</description>
        <field>Apttus_Config2__IsOptional__c</field>
        <literalValue>1</literalValue>
        <name>Update Is Optional on Line Item</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
    </fieldUpdates>
    <rules>
        <fullName>APTSProductType</fullName>
        <actions>
            <name>APTS_Product_Type</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Apttus_Config2__LineItem__c.Name</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>This workflow will be executed when line item is created and will update product type text field on line item</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>MarkOptionalProducts</fullName>
        <actions>
            <name>Update_Is_Optional_on_Line_Item</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>This work flow will update isOptional field on line item based on Product Object field</description>
        <formula>Apttus_Config2__OptionId__r.APTS_Is_Optional__c = true</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>UpdateProductSubtype</fullName>
        <actions>
            <name>SetProductSubtype</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>This workflow will be executed when line item is created and will update product subtype text field on line item</description>
        <formula>true</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>

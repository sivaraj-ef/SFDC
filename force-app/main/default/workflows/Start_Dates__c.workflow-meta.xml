<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>UpdateStartDateNameField</fullName>
        <description>Update the name field value based on start date month</description>
        <field>Name</field>
        <formula>CASE(MONTH(StartDate__c ), 1, "January", 2, "February", 3, "March",  4, "April",  5, "May",  6, "June", 7, "July", 8, "August", 9, "September", 10, "October", 11, "November", 12, "December", "None")</formula>
        <name>UpdateStartDateNameField</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <rules>
        <fullName>UpdateStartDateNameField</fullName>
        <actions>
            <name>UpdateStartDateNameField</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>This rule will update the name field based on start date value
Ex:If start date is 01-01-2017 then name field value will be 	"JANUARY"</description>
        <formula>AND(!IsNull( StartDate__c ), !IsBlank(StartDate__c ))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
